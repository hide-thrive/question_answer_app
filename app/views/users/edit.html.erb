<h1>ユーザ編集</h1>

<%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.file_field :avatar, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'お名前'%>
    </div>
    <div class="form-group">
      <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
    </div>
    <div class="form-group">
      <%= f.text_field :password, class: 'form-control', placeholder: 'パスワード' %>
    </div>
    <div class="form-group">
      <%= f.text_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
    </div>
    <%= f.submit '登録', class: 'btn btn-info' %>
<% end %>
