<h1>ユーザー詳細</h1>

<div class="row pt-5">
  <div class="col-4 user-avatars">
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "img-fluid "%>
    <% else %>
      <%= image_tag 'avatar.png', class: "img-fluid rounded" %>
    <% end %>
  </div>
  <div class="col-8">
    <ul class="user-profile">
      <li class="user-name" style="font-size: 30px;">
        <%= @user.name %>
      </li>
      <li class="user-email" style="font-size: 30px;">
        <%= @user.email %>
      </li>
    </ul>
  </div>
</div>
<% if current_user.id == @user.id %>
  <div class="row pt-4">
    <span class="col-3" style="padding:0 15px 0 50px;">
      <%= link_to '編集', edit_user_path(@user), class: 'btn btn-info text-white' %>
    </span>
    <span class="col-3" style="padding:0 15px 0 0;" >
      <%= link_to '削除', @user, method: :delete, data: { confirm: "質問「#{@user.name}」を削除してもよろしいですか？"} , class: 'btn btn-danger' %>
    </span>
  </div>
<% end %>